<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/expensedet"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginVertical="2dp">

    //CHANGE THE CONSTRAINT LAYOUT TO LINEAR LAYOUT
    //THIS LAYOUT IS A PART OF THE RECYCLER VIEW(SCROLLABLE CONTENT)

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="5dp">
// VIEW HOLDER
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    //IMAGE
   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:padding="8dp"
       android:src="@mipmap/ic_launcher"
       android:id="@+id/imgicon"
       android:layout_gravity="center_vertical"
       />
    //DETAILS

    <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">
    //PURPOSE OF EXPENSE
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:text="Expense"
        android:textSize="16sp"
        android:padding="4dp"
        android:paddingLeft="16dp"
        android:id="@+id/Xpnsetitle"
        />
 // DATE AND PAYMENT METHOD
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:textSize="10sp"
        android:padding="4dp"
        android:paddingLeft="16dp"
        android:text="Date"
        android:id="@+id/xpnsedte"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:textSize="10sp"
        android:padding="4dp"
        android:paddingLeft="16dp"
        android:text="Payment Method"
        android:id="@+id/xpnsepm"
        />
</LinearLayout>
</LinearLayout>
    //AMOUNT
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/xp_amt"
            android:text="0.00  "
            android:textSize="14sp"
            android:layout_gravity="center"
            android:textAlignment="textEnd"
            card_view:ignore="RtlCompat"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" â‚¬"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>