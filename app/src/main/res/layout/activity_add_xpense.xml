<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddIncome">
    //CHANGE THE CONSTRAINT LAYOUT TO RELATIVE LAYOUT

    //TOOLBAR
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/addxpensetoolbar"
        android:background="@color/design_default_color_primary"
        android:elevation="40dp">

        <ImageView
            android:id="@+id/goHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_home_white_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CELEDGER"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFFF"
            android:paddingLeft="20dp"
            android:layout_weight="0.99"/>
        //ADD SIGN
    </LinearLayout>

    //SELECT
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addxpensetoolbar"
        android:id="@+id/Select"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/incmeimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:text="Income" />

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:elevation="8dp"
            android:text="Expense" />
    </LinearLayout>

    //AMOUNT
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/Select"
        android:id="@+id/expamtlayout">

        //SHOWS TEXT
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="AMOUNT"
            android:textColor="#0E0D0D"
            android:textSize="16sp"
            android:layout_weight="0.6"/>

        //PLACE WHERE USER ADDS DATA

        <EditText
            android:id="@+id/expamt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="0.5"
            android:hint="Add Amount"
            android:inputType="numberDecimal"

            android:textSize="12sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="16dp"
            android:text="â‚¬"
            android:textColor="#0E0D0D"
            android:textSize="16sp"/>
    </LinearLayout>

    //EXPENSE CATEGORY
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expamtlayout"
        android:id="@+id/expsrclayout"
        android:layout_marginTop="16sp">

        //SHOWS TEXT
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="PURPOSE OF EXPENSE"
            android:textSize="16sp"
            android:textColor="#0E0D0D"
            android:paddingLeft="16sp"
            android:layout_weight="0.24"/>

        //PLACE WHERE USER ADDS DATA

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/expsrc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:hint="Select Catagory"
            android:textSize="12sp" />
    </LinearLayout>

    //PAYMENT METHOD
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expsrclayout"
        android:id="@+id/expPMlayout"
        android:layout_marginTop="16sp">

        //SHOWS TEXT
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Payment Method"
            android:textSize="16sp"
            android:textColor="#0E0D0D"
            android:paddingLeft="16sp"
            android:layout_weight="1"/>

        //PLACE WHERE USER ADDS DATA

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/exppm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_weight="0.9"
            android:hint="Select Payment Option"
            android:textSize="12sp" />
    </LinearLayout>

    //DATE
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expPMlayout"
        android:id="@+id/expdtelayout"
        android:layout_marginTop="16sp">

        //SHOWS TEXT
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="DATE"
            android:textSize="16sp"
            android:textColor="#0E0D0D"
            android:paddingLeft="16sp"
            android:layout_weight="0.58"/>

        //PLACE WHERE USER ADDS DATA
        <EditText
            android:id="@+id/expdte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical"
            android:hint="Select Date"
            android:focusable="false"
            android:textIsSelectable="true"
            android:textSize="12sp" />
    </LinearLayout>

    //DESCRIPTION
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expdtelayout"
        android:layout_marginTop="10dp"
        android:id="@+id/xpdscrptn">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/expdesc"
            android:padding="10dp"
            android:hint="Description (Optional)"
            android:gravity="top"
            android:background="@drawable/border"/>
    </LinearLayout>

    //BUTTON TO ADD DATA TO DATABASE
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addexpensebtn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="28dp"
        android:layout_centerHorizontal="true"
        android:text="ADD EXPENSE"
        android:enabled="false"/>

</RelativeLayout>
